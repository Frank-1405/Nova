<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contenedorFragments"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondo"
    android:layout_height="match_parent"
    tools:context=".menuActivity">

    <ImageView
        android:id="@+id/sistemaSolar"
        android:layout_width="162dp"
        android:layout_height="156dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sol" />

    <ImageView
        android:id="@+id/galaxia"
        android:layout_width="99dp"
        android:layout_height="93dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sistemaSolar"
        app:srcCompat="@drawable/mercurio" />

    <ImageView
        android:id="@+id/constelaciones"
        android:layout_width="106dp"
        android:layout_height="97dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toEndOf="@+id/juegoEstrellas"
        app:layout_constraintTop_toBottomOf="@+id/sistemaSolar"
        app:srcCompat="@drawable/venus" />

    <ImageView
        android:id="@+id/juegoEstrellas"
        android:layout_width="117dp"
        android:layout_height="110dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/galaxia"
        app:srcCompat="@drawable/tierra" />

    <ImageView
        android:id="@+id/realidadAumetada"
        android:layout_width="154dp"
        android:layout_height="148dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="28dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:foregroundTint="#5C0101"
        android:tint="#BE3A3636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/juegoEstrellas"
        app:srcCompat="@drawable/jupiter" />

    <ImageView
        android:id="@+id/sonidos"
        android:layout_width="108dp"
        android:layout_height="89dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/juegoEstrellas"
        app:layout_constraintTop_toBottomOf="@+id/constelaciones"
        app:srcCompat="@drawable/marte" />

    <ImageView
        android:id="@+id/estrellaFugaz"
        android:layout_width="153dp"
        android:layout_height="160dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toEndOf="@+id/realidadAumetada"
        app:layout_constraintTop_toBottomOf="@+id/sonidos"
        app:srcCompat="@drawable/saturno" />

    <ImageView
        android:id="@+id/colorear"
        android:layout_width="108dp"
        android:layout_height="89dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/realidadAumetada"
        app:srcCompat="@drawable/urano" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="55dp"
        android:layout_height="41dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="116dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/estrellaFugaz"
        app:srcCompat="@drawable/neptuno" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="48dp"
        android:layout_height="44dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorear"
        app:srcCompat="@drawable/pluton" />

</androidx.constraintlayout.widget.ConstraintLayout>